<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_180dp"
        android:layout_margin="@dimen/margin_16dp"
        app:cardCornerRadius="@dimen/cornerradious_16dp"
        app:cardElevation="@dimen/cardelevation_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_user"
        android:elevation="16dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/baseline_person_24"
        android:layout_margin="@dimen/dimension_16_dp"
        app:layout_constraintTop_toTopOf="@+id/card"
        app:layout_constraintBottom_toBottomOf="@id/card"
        app:layout_constraintStart_toStartOf="@+id/card"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/card"
        app:layout_constraintStart_toEndOf="@id/img_user"
        android:layout_margin="@dimen/dimension_16_dp"
        android:textColor="@color/black"
        android:text="Shyam Munikar"
        android:elevation="@dimen/dimension_16_dp"
        android:textStyle="bold">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>